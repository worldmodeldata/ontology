@prefix ludo:<http://ns.inria.fr/ludo/v1/gamemodel#> .
@prefix ug:  <http://ontology.gaming.network/universal/gaming#> .
@prefix ub:  <http://ontology.gaming.network/universal/human_behavior#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#> .

# NOTE: This is an alignment/mapping ontology.
# It should remain small and explicit: bridges between LUDO and our universal foundation.
#
# Source ontology:
# - https://ns.inria.fr/ludo/
# - local normalized copy: sources/ludo/ludo.ttl (derived from v1/gamemodel.rdf)

<https://worldmodeldata.org/ontology/mappings/ludo_to_universal>
  a owl:Ontology ;
  rdfs:label "LUDO â†’ Universal alignment" ;
  rdfs:comment "Bridges LUDO (Inria game model ontology) concepts into the universal gaming foundation (ug:/ub:) without importing LUDO into the flagship ontology." ;
  owl:imports
    <http://ns.inria.fr/ludo/v1/gamemodel> ;
  .

# ============================================================================
# First-pass alignments (runtime-ish concepts only)
# ============================================================================

ludo:SeriousGame rdfs:subClassOf ug:Game .

ludo:GameEvent rdfs:subClassOf ug:GameEvent .

ludo:GamePlayer rdfs:subClassOf ug:Player .

ludo:Action rdfs:subClassOf ub:BehavioralEvent .

# LUDO links a scenario to events; in our foundation, sessions contain events.
ludo:hasGameEvent rdfs:subPropertyOf ug:containsEvent .


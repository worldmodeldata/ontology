@prefix : <http://ontology.gaming.network/mappings/unity#> .
@prefix u: <http://ontology.gaming.network/sources/unity#> .
@prefix g: <http://ontology.gaming.network/universal/gaming#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .

# ============================================================================
# Unity Analytics to Universal Gaming Foundation Mapping
# Author: Gi Fernando
# Copyright: Â© 2025 Gi Fernando. All rights reserved.
# Description: Maps Unity Analytics events and properties to universal gaming ontology
# ============================================================================

<http://ontology.gaming.network/mappings/unity> a owl:Ontology ;
    dc:title "Unity to Universal Mapping" ;
    dc:creator "Gi Fernando" ;
    dc:date "2025-12-27" ;
    owl:versionInfo "1.0.0" ;
    owl:imports <http://ontology.gaming.network/sources/unity> ,
                 <http://ontology.gaming.network/universal/gaming> ;
    rdfs:comment "Maps Unity Analytics concepts to universal gaming foundation" .

# ============================================================================
# EVENT MAPPINGS (OWL Equivalent Classes)
# ============================================================================

:UnityLevelStartToEngagementEvent a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            u:UnityLevelEvent
            [
                a owl:Restriction ;
                owl:onProperty u:unityEventName ;
                owl:hasValue "level_start"
            ]
        )
    ] ;
    rdfs:subClassOf g:LevelStart ;
    rdfs:label "Unity Level Start to Engagement Event"@en .

:UnityPurchaseToMonetizationEvent a owl:Class ;
    owl:equivalentClass u:UnityMonetizationEvent ;
    rdfs:subClassOf g:Purchase ;
    rdfs:label "Unity Purchase to Monetization Event"@en .

:UnitySessionStartToGameSession a owl:Class ;
    owl:equivalentClass u:UnitySessionEvent ;
    rdfs:subClassOf g:GameSession ;
    rdfs:label "Unity Session Start to Game Session"@en .

# ============================================================================
# PROPERTY MAPPINGS (OWL Property Chains)
# ============================================================================

:mapsUnityUserIdToDeviceId a owl:DatatypeProperty ;
    rdfs:domain u:UnityEvent ;
    rdfs:range xsd:string ;
    rdfs:label "maps Unity user ID to device ID"@en ;
    rdfs:comment "Maps u:unityUserId to g:deviceId" .

:mapsUnitySessionIdToSessionId a owl:DatatypeProperty ;
    rdfs:domain u:UnityEvent ;
    rdfs:range xsd:string ;
    rdfs:label "maps Unity session ID to session ID"@en ;
    rdfs:comment "Maps u:unitySessionId to g:sessionId" .

:mapsUnityTimestampToActivityTimestamp a owl:DatatypeProperty ;
    rdfs:domain u:UnityEvent ;
    rdfs:range xsd:dateTime ;
    rdfs:label "maps Unity timestamp to activity timestamp"@en ;
    rdfs:comment "Maps u:unityTimestamp to g:activityTimestamp" .

# ============================================================================
# MAPPING RULES (Documentation)
# ============================================================================

# Note: Actual transformation is done via adapters (Python scripts)
# This ontology documents the semantic mapping relationships

:UnityEventMappingRule a owl:Class ;
    rdfs:label "Unity Event Mapping Rule"@en ;
    skos:definition "Rules for mapping Unity events to universal gaming events" .

:UnityPropertyMappingRule a owl:Class ;
    rdfs:label "Unity Property Mapping Rule"@en ;
    skos:definition "Rules for mapping Unity properties to universal gaming properties" .

# ============================================================================
# END OF ONTOLOGY
# ============================================================================


<http://ontology.gaming.network/universal/gaming_ontology_composed> a owl:Ontology ;
  dc:title "WorldModelData Universal Gaming Ontology v1 (Composed)" ;
  dc:creator "WorldModelData" ;
  dc:date "2025-12-12" ;
  owl:versionInfo "1.0.0+extensions" ;
  rdfs:comment "Composition entrypoint: imports flagship universal gaming ontology plus selected extensions."@en ;
  owl:imports
    <http://ontology.gaming.network/universal/gaming_ontology> ,
    <http://ontology.gaming.network/extensions/game_design> ,
    <http://ontology.gaming.network/extensions/character_mechanics> ;
  .

